<div class='pusher' ng-controller='QuestionController'>
  <div class='ui container grid'>
    <div class='one column row'>
    </div>
    <div class='one column row'>
      <div class='column'>
        <h1 class='ui header'>Add Questions to Test Bank</h1>
      </div>
    </div>
    <div class='ui divider'></div>
    <div class='one column row'>
      <form class='ui form' style='width: 100%;'>
        <div class='fluid field'>
          <div class='eight wide field'>
            <label>Topic</label>
            <div class='ui selection dropdown'>
              <i class='dropdown icon'></i>
              <div class='default text'>Select Topic</div>
              <div class='menu'>
                  <div ng-repeat="topic in topics" class='item' data-value='{{topic.value}}'>{{topic.name}}</div>
              </div>
            </div>
          </div>
          <div class='eight wide field'>
            <label>Question Type</label>
            <div class='ui selection dropdown'>
              <i class='dropdown icon'></i>
              <div class='default text'>Select Question Type</div>
              <div class='menu'>
                  <div ng-repeat="type in types" class='item' ng-click='typeChange(type.value)' value='{{type.value}}'>
                    {{type.name}}
                  </div>
              </div>
            </div>
          </div>
          <div class='eight wide field'>
            <label>Difficulty Level</label>
            <div class='ui selection dropdown'>
              <i class='dropdown icon'></i>
              <div class='default text'>Select Difficulty Level</div>
              <div class='menu'>
                  <div ng-repeat="difficulty in difficulties" class='item' value='{{difficulty.value}}'>
                    {{difficulty.name}}
                  </div>
              </div>
            </div>
          </div>
          <label>Question</label>
          <div class='fields'>
            <div class='twelve wide field'>
              <div text-angular ng-model='htmlVariable'></div>
            </div>
          </div>
          <div class='answers'ng-switch on='typeState'>
            <div ng-switch-when='MCQ'>
              <multiple-choice></multiple-choice>
            </div>
            <div ng-switch-when='MAS'>
              <multiple-answer></multiple-answer>
            </div>
            <div ng-switch-when='SBT'>
              <subjective-text></subjective-text>
            </div>
            <div ng-switch-when='SBC'>
              <subjective-code></subjective-code>
            </div>
          </div>
        </div>
        <div class='one column row'>
          <br>
        </div>
      </form>
      <button type='button' class='ui icon button'>
        <i class='plus icon'></i>
      </button>

      <button class='ui primary button'>
        Submit
      </button>
    </div>
  </div>
</div>

