<div class="ui container grid"  ng-controller='RegisterController'>
  <div class="one column row">
  </div>
  <div class="one column row">
    <div class="column">
      <h1 class="ui header">Welcome to Recruitment</h1>
    </div>
  </div>
  <div class="ui divider"></div>
  <div class="one column row">
    <form class="ui form" style="width: 100%;">
      <h2 class="ui dividing header">Registration</h2>
      <div class="field">
        <label>Name</label>
        <div class="two fields">
          <div class="field">
            <input type="text" name="first-name" placeholder="First Name" ng-model='firstName'>
          </div>
          <div class="field">
            <input type="text" name="last-name" placeholder="Last Name" ng-model='lastName'>
          </div>
        </div>
      </div>
      <div class="field">
        <label>Contact Details</label>
        <div class="two fields">
          <div class="field">
            <input type="text" name="mobile-number" placeholder="Handphone Number" ng-model='mobileNo'>
          </div>
          <div class="field">
            <input type="text" name="email" placeholder="Email ID" ng-model='email'>
          </div>
        </div>
      </div>
      <div class="field">
        <label>Position Interested In</label>
        <div class='ui selection dropdown'>
          <i class='dropdown icon'></i>
          <div class='default text'>Select Position</div>
          <div class='menu'>
              <div ng-repeat="pos in positions" class='item' data-value='{{pos.value}}'
                ng-click='setNewPosition(pos)'>
                {{pos.name}}
              </div>
          </div>
        </div>
      </div>
      <div class="field">
        <label>Relevant Skills</label>
        <div class="twelve wide field">
          <select class="ui fluid search dropdown" multiple="" ng-model='skills'>
            <option value="">Skills</option>
            <option value="AND">Android Development</option>
            <option value="IOS">iOS Development</option>
            <option value="JAV">Java</option>
            <option value="WEB">Web Development</option>
            <option value="ROR">Ruby-on-Rails</option>
            <option value="DJA">Django</option>
            <option value="FLS">Full-Stack</option>
            <option value="DBA">Database</option>
            <option value="DAN">Data Analysis</option>
            <option value="SEC">Security</option>
            <option value="SER">Server Admin</option>
          </select>
        </div>
      </div>
      <div class="field">
        <label>Credentials (Optional)</label>
        <div class="two fields">
          <div class="ui left icon input field">
            <input type="text" name="github-id" placeholder="GitHub ID" ng-model='githubId'>
            <i class="github icon"></i>
          </div>
        </div>
      </div>
      <button class='ui primary button' ng-click='submit()'>
        Apply
      </button>
    </form>
  </div>

  <div class="ui basic modal">
    <i class="close icon"></i>
    <div class="header">
      Thanks for applying!
    </div>
    <div class="image content">
      <div class="image">
        <i class="green checkmark icon"></i>
      </div>
      <div class="description">
        <p>Our HR team shall contact you soon!</p>
      </div>
    </div>
    <div class="actions">
      <a href='jobs'>
        <div class="ui positive green basic inverted button">
          Okay
        </div>
      </a>
    </div>
  </div>

</div>
<script type='text/javascript'>
  $('.ui.dropdown')
    .dropdown()
  ;
</script>
