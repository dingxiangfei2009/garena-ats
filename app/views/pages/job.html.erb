<div class='pusher' ng-controller='JobController'>
  <div class='ui container grid'>
    <div class='one column row'>
    </div>
    <div class='one column row'>
      <div class='column'>
        <h1 class='ui header'>Create a New Job Position</h1>
      </div>
    </div>
    <div class='ui divider'></div>
    <div class='one column row'>
      <form class='ui form' style='width: 100%;'>
        <div class='fluid field'>
          <div class='eight wide field'>
            <label>Position</label>
            <div class="field">
              <input type="text" name="position-name" placeholder="Position Title">
            </div>
            <div class="field">
              <label>Skills Required</label>
              <div class="twelve wide field">
                <select class="ui fluid search dropdown" multiple="">
                  <option value="">Skills</option>
                  <option value="AND">Android Development</option>
                  <option value="IOS">iOS Development</option>
                  <option value="JAV">Java</option>
                  <option value="WEB">Web Development</option>
                  <option value="ROR">Ruby-on-Rails</option>
                  <option value="DJA">Django</option>
                  <option value="FLS">Full-Stack</option>
                  <option value="DBA">Database</option>
                  <option value="DAN">Data Analysis</option>
                  <option value="SEC">Security</option>
                  <option value="SER">Server Admin</option>
                </select>
              </div>
            </div>
          </div>
          <div class='sixteen wide field'>
            <label>Experience Level</label>
            <div class="eight wide field">
              <select class='ui dropdown'>
                <option value="">Experience</option>
                <option value="none">Entry Level</option>
                <option value="two">2 Years Experience</option>
                <option value="five">5 Years Experience</option>
                <option value="ten">10 Years Experience</option>
              </select>
            </div>
            <!-- <div class='inline three fields'>
              <div class='four wide field'>
                <button type='button' class='ui icon button'>
                  <i class='minus icon'></i>
                </button>
              </div>
              <div class='field'>
                <div class='ui blue progress'>
                  <div class='bar' style='transition-duration: 300ms;width: 64%;'></div>
                </div>
              </div>
              <div class='four wide field'>
                <button type='button' class='ui icon button'>
                  <i class='plus icon'></i>
                </button>
              </div>
            </div> -->

          </div>
          <label>Test Parameters for Job Position</label>
          <div class='twelve wide field'>
            <table class="ui very padded table">
              <thead>
                <tr>
                  <th>Topic</th>
                  <th>Number of Questions</th>
                  <th>Difficulty</th>
                  <th>Remove</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat='jobTopic in jobTopics track by $index'>
                  <td>
                    <div class='ui selection dropdown'>
                      <i class='dropdown icon'></i>
                      <div class='default text'>Select Topic</div>
                      <div class='menu'>
                          <div ng-repeat="topic in topics" class='item' data-value='{{topic.value}}'>
                            {{topic.name}}
                          </div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <input class='' type='number' min='1' placeholder='Number of Questions'></input>
                  </td>
                  <td>
                    <div class='ui selection dropdown'>
                      <i class='dropdown icon'></i>
                      <div class='default text'>Select Difficulty Level</div>
                      <div class='menu'>
                          <div ng-repeat="diff in difficulties" class='item' value='{{diff.value}}'>
                            {{diff.name}}
                          </div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <button class='ui red button' ng-click='jobTopics.splice($index, 1)'>
                      Remove
                    </button>
                  </td>
                  <script type='text/javascript'>
                    $('.ui.dropdown')
                      .dropdown()
                    ;
                  </script>
                </tr>
                <tfoot class="full-width">
                  <tr>
                    <th></th>
                    <th colspan="4">
                      <div class="ui right floated green labeled icon button" ng-click='jobTopics.push(jobTopics.length + 1)'>
                        <i class="plus icon"></i> Add Topic
                      </div>
                    </th>
                  </tr>
                </tfoot>
              </tbody>
            </table>
          </div>
        </div>
        <div class='one column row'>
          <br>
        </div>
      </form>
      <button class='ui primary button'>
        Submit
      </button>
    </div>
  </div>
</div>

<script type='text/javascript'>
  $('.ui.dropdown')
    .dropdown()
  ;
</script>
